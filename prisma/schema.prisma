datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Wedding {
  id          String @id @default(cuid())
  weddingName String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  guestPassword GuestPassword?
  adminPassword Password?
}

model Password {
  hash      String
  wedding   Wedding @relation(fields: [weddingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  weddingId String  @unique
}

model GuestPassword {
  hash      String
  wedding   Wedding @relation(fields: [weddingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  weddingId String  @unique
}
